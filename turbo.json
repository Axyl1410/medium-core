{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["DATABASE_URL", "SKIP_DB_GENERATE"]
    },
    "db:generate": {
      "cache": false,
      "inputs": ["src/**/*.ts", "drizzle.config.ts", ".env*"],
      "outputs": ["drizzle/**"],
      "env": ["DATABASE_URL", "SKIP_DB_GENERATE"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^db:generate"]
    }
  }
}
